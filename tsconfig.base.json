{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@taskarr/common": ["package/common/src/index.ts"],
			"@taskarr/db": ["db/src/index.ts"],
			"@taskarr/task": ["package/task/src/index.ts"],
			"@taskarr/typebox": ["typebox/src/index.ts"],
			"@taskarr/ui/api": ["ui/api/src/index.ts"],
			"@taskarr/ui/api/server": ["ui/api/src/server.ts"],
			"@taskarr/ui/components": ["ui/components/src/index.ts"],
			"@taskarr/ui/components/server": ["ui/components/src/server.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
